{
  "manifest_version": 3,
  "name": "Movie Dubbing Extension",
  "version": "1.0",
  "description": "Search for movies and apply or generate dubbing",
  "permissions": ["activeTab", "storage", "scripting", "notifications"],
  "host_permissions": ["https://*/", "http://*/"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/extension/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/extension/background.js",
    "type": "module"
  }
}
