{
  "manifest_version": 3,
  "name": "Movie Dubbing Extension",
  "version": "1.0",
  "description": "Search for movies and apply or generate dubbing",
  "permissions": [
    "activeTab",
    "tabs",
    "offscreen",
    "storage",
    "scripting",
    "identity",
    "identity.email"
  ],
  "oauth2": {
    "client_id": "75200943505-tac3qkuke542o7pu7evmabpqj2e2paih.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": ["https://*/", "http://*/"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/mic-inactive16.png",
      "48": "icons/mic-inactive48.png",
      "128": "icons/mic-inactive128.png"
    }
  },
  "icons": {
    "16": "icons/mic-inactive16.png",
    "48": "icons/mic-inactive48.png",
    "128": "icons/mic-inactive128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
