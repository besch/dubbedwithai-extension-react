{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src/extension",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "chrome"],
    "resolveJsonModule": true
  },
  "include": ["src/extension/**/*.ts"],
  "exclude": ["node_modules"]
}
